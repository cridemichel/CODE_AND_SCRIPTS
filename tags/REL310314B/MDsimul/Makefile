# make sub-make
rigidABdbLJ: rigidAB_link common rigidABdbLJObjs#common always here
	$(CC) $(LDFLAGS) -L$(PERC)/lib/ $(COMMOBJ) $(RIGIDOBJS) -o $(BIN)/rigidABdbLJ -lm 

